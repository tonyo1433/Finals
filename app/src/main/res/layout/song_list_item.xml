<?xml version="1.0" encoding="UTF-8"?>
<android.support.v7.widget.CardView
    android:elevation="10dp"
    app:cardCornerRadius="2dp"
    app:cardUseCompatPadding="true"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:id="@+id/portfolio_card"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <ImageView android:elevation="10dp"
        android:layout_height="100dp"
        android:layout_width="130dp"
        android:id="@+id/album_image"
        android:src="@mipmap/ic_launcher"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:scaleType="centerCrop"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/album_title"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:textSize="20sp"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@+id/album_image"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:text="FinalExam"/>

    <View
        android:layout_height="1dp"
        android:layout_width="320dp"
        android:id="@+id/line"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:layout_alignLeft="@id/album_title"
        android:layout_alignStart="@id/album_title"
        android:layout_below="@id/album_title"
        android:background="#D2CCB7" android:alpha=".5"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="200dp"
        android:id="@+id/album_artist"
        android:layout_marginTop="5dp"
        android:textSize="15sp"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@+id/album_image"
        android:text="FinalExam"
        android:layout_alignLeft="@+id/album_title"
        android:layout_alignStart="@+id/album_title"
        android:layout_below="@+id/line"
        android:maxLength="90"
        android:layout_gravity="right"
        android:textStyle="italic"/>

</RelativeLayout>

</android.support.v7.widget.CardView>